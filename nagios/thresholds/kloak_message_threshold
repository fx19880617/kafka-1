# vim: set ft=python
boxes = 'kloak{01,02,03,04,05,06,07,08}-sjc1'

warn_thresholds = {

   'controler_count': 2

}

critical_thresholds = {


}

checks = {

   'controler_count': 'sumSeries(servers.' + boxes + '.kafka.controller.KafkaController.ActiveControllerCount.value)'

}

for check in checks:
    
    graphite.absolute_threshold(checks[check], alias=check, warning_over=warn_thresholds.get(check), critical_over=critical_thresholds.get(check))

