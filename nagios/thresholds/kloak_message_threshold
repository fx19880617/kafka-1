# vim: set ft=python
boxes = 'kloak{01,02,03,04,05,06,07,08}-sjc1'

warn_thresholds = {

   #'num_messages': 200

}

critical_thresholds = {


}

checks = {

   #'num_messages': 'sumSeries(servers.' + boxes + '.kafka.server.BrokerTopicMetrics.MessagesInPerSec.*.*.count)'

}

for check in checks:
    
    graphite.absolute_threshold(checks[check], alias=check, warning_over=warn_thresholds.get(check), critical_over=critical_thresholds.get(check))

